{
  "name": "@bo-carey/urlglob",
  "description": "A lightweight TypeScript library for matching URLs with glob patterns",
  "version": "1.2.1",
  "homepage": "https://github.com/bo-carey/urlglob",
  "author": "Bo Carey",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "npx eslint src",
    "lint:fix": "npm run lint --fix",
    "prettier": "prettier src -c",
    "prettier:fix": "npm run prettier -- --write",
    "release": "npm run setup-dist && cd ./dist && npm publish",
    "setup-dist": "mkdir -p dist && ts-node setupPackage.ts && npm run build",
    "test": "jest --no-cache --runInBand",
    "ts:check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bo-carey/urlglob.git"
  },
  "bugs": {
    "url": "https://github.com/bo-carey/urlglob/issues"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "urlglob",
    "globbing",
    "url-matching",
    "pattern-matching",
    "url",
    "glob-patterns",
    "nodejs",
    "typescript",
    "regex-alternative",
    "url-parsing",
    "url-pattern",
    "web-development"
  ]
}
